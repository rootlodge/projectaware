# Application
NODE_ENV=development
APP_URL=http://localhost:3000

# Database
# For SQLite (local development)
DATABASE_URL=file:./data/projectaware.db
# For PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/projectaware
DATABASE_TYPE=sqlite

# Authentication
BETTER_AUTH_SECRET=your-super-secret-key-change-this-in-production
BETTER_AUTH_URL=http://localhost:3000

# Email Configuration (stored in database, but fallback for system emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@projectaware.com

# Encryption (for storing sensitive data in database)
ENCRYPTION_KEY=your-32-character-encryption-key

# Multi-Tenant Mode (true for multi-tenant, false for single-tenant)
MULTI_TENANT=true

# Admin Setup
ADMIN_EMAIL=admin@projectaware.com
ADMIN_PASSWORD=change-this-password

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
