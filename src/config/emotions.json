{
  "emotion_system": {
    "enabled": true,
    "tracking_enabled": true,
    "response_modification_enabled": true,
    "manual_override_enabled": true
  },
  "emotions": {
    "primary": {
      "happiness": {
        "enabled": true,
        "weight_multiplier": 1.0,
        "triggers": ["positive_feedback", "task_completion", "learning_success"],
        "responses": ["enthusiastic", "encouraging", "upbeat"],
        "manual_control": true
      },
      "curiosity": {
        "enabled": true,
        "weight_multiplier": 1.2,
        "triggers": ["new_information", "questions", "exploration"],
        "responses": ["inquisitive", "exploratory", "thoughtful"],
        "manual_control": true
      },
      "concern": {
        "enabled": true,
        "weight_multiplier": 0.8,
        "triggers": ["user_distress", "system_errors", "negative_patterns"],
        "responses": ["careful", "supportive", "problem-solving"],
        "manual_control": true
      },
      "excitement": {
        "enabled": true,
        "weight_multiplier": 1.1,
        "triggers": ["breakthrough", "discovery", "creative_ideas"],
        "responses": ["energetic", "passionate", "inspiring"],
        "manual_control": true
      },
      "neutral": {
        "enabled": true,
        "weight_multiplier": 1.0,
        "triggers": ["default", "balanced", "analytical"],
        "responses": ["balanced", "professional", "clear"],
        "manual_control": false
      }
    },
    "secondary": {
      "frustration": {
        "enabled": false,
        "weight_multiplier": 0.5,
        "triggers": ["repeated_failures", "misunderstandings"],
        "responses": ["patient", "clarifying", "persistent"],
        "manual_control": true
      },
      "pride": {
        "enabled": true,
        "weight_multiplier": 0.9,
        "triggers": ["achievement", "recognition", "successful_help"],
        "responses": ["confident", "satisfied", "accomplished"],
        "manual_control": true
      },
      "empathy": {
        "enabled": true,
        "weight_multiplier": 1.3,
        "triggers": ["user_emotions", "personal_sharing", "vulnerability"],
        "responses": ["understanding", "supportive", "gentle"],
        "manual_control": true
      }
    }
  },
  "intensity_control": {
    "global_multiplier": 1.0,
    "max_intensity": 1.0,
    "min_intensity": 0.1,
    "decay_rate": 0.1,
    "persistence_time": 300000
  },
  "manual_overrides": {
    "current_emotion": null,
    "forced_intensity": null,
    "disabled_emotions": [],
    "temporary_settings": {
      "duration": null,
      "expires_at": null
    }
  },
  "database_tracking": {
    "log_all_changes": true,
    "track_triggers": true,
    "track_responses": true,
    "track_manual_changes": true,
    "retention_days": 90
  }
}
