{
  "self_modification": {
    "enabled": true,
    "constraints": {
      "max_modifications_per_day": 3,
      "require_human_approval": true,
      "allowed_modification_types": [
        "behavior_adjustment",
        "performance_improvement", 
        "bug_fix",
        "optimization"
      ],
      "protected_files": [
        "src/lib/systems/SelfModificationEngine.ts",
        "src/lib/core/StateManager.ts",
        "src/lib/core/brain.ts",
        "package.json",
        "next.config.ts",
        "tsconfig.json"
      ],
      "protected_methods": [
        "implementModification",
        "rollbackModification",
        "evaluateModificationSafety",
        "submitModificationProposal"
      ],
      "sandbox_mode": true,
      "auto_rollback_on_errors": true,
      "modification_cool_down_period": 60,
      "risk_thresholds": {
        "auto_approve_below": "low",
        "require_review_above": "medium", 
        "block_above": "critical"
      }
    },
    "monitoring": {
      "track_effectiveness": true,
      "effectiveness_monitoring_duration": 300,
      "auto_rollback_threshold": -0.3,
      "success_rate_threshold": 0.7
    },
    "notifications": {
      "notify_on_proposal": true,
      "notify_on_implementation": true,
      "notify_on_rollback": true,
      "email_notifications": false
    }
  }
}
